---
import { Icon } from 'astro-icon/components'

const { project } = Astro.props;
---
<li>
  <article class="project-card">
    <img
      class="image"
      src={project.image.src} alt={`A Screenshot of the ${project.name} project`} />
    <span><Icon name="lucide:sprout" size="16"/>{ project.co2 }g co2eq</span>
    <h3>{project.name}</h3>
    <!-- <!-- <h4 v-if="project.agency">{ project.agency }</h4> -->
    <p>{ project.description }</p>
    <!-- <ul>
      <!-- <li v-for="(tag, index) in project.tags" :key="index">
        { tag }
      </li>
    </ul> -->
  </article>
</li>
<style lang="scss">
li {

  article {
    position: relative;
    max-width: 360px;
    display: flex;
    flex-direction: column;
    width: 100%;
    .image {
      mix-blend-mode: multiply;
      margin: 0;
      width: 100%;
    }

    span {
      // position: absolute;
      // top: 200px;
      // right: 1px;
      background: black;
      color: $yellow;
      padding: 0.2rem;
      margin:0;
      font-size: 0.8rem;
      line-height: 0.7rem;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      flex-direction: row-reverse;
      margin-bottom: 5px;
      gap: 0.5rem;
    }

    ul {
      display: flex;
      flex-wrap: wrap;
      margin-top: 0.5rem;
      gap: 0.8rem;
    }
    li {
        padding: 0.2rem;
        background: black;
        color: $yellow;
      }
    }
  }
</style>